{
        "tasks": [
                {
                        "type": "cppbuild",
                        "label": "C/C++: gcc 生成活动文件",
                        "command": "/usr/bin/gcc",
                        "args": [
                                "-g",
                                "${fileDirname}/Main.c",
                                "${fileDirname}/AI.c",
                                "${fileDirname}/Game.c",
                                "${fileDirname}/GetTime.c",
                                "${fileDirname}/History.c",
                                "${fileDirname}/IfWin.c",
                                "${fileDirname}/Init.c",
                                "${fileDirname}/PrintBoard.c",
                                "${fileDirname}/Settings.c",
                                "${fileDirname}/tool/kbhit.c",
                                "${fileDirname}/tool/menu.c",
                                "-o",
                                "${fileDirname}/../bin/main"
                        ],
                        "options": {
                                "cwd": "${workspaceFolder}"
                        },
                        "problemMatcher": [
                                "$gcc"
                        ],
                        "group": {
                                "kind": "build",
                                "isDefault": true
                        },
                        "detail": "调试器生成的任务。"
                }
        ],
        "version": "2.0.0"
}
